<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title =%></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
    <div class="footer">
    <% if @current_user %>
      <p><%= link_to "Logout", controller: "sessions", action: "logout" %></p>
      <% if @current_user[:admin] %>
        <p>Be careful! You are acting as an admin!</p>
      <% end %>
    <% end %>
    </div>
  </body>
</html>
